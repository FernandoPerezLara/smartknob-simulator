<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>

  <object class="GtkApplicationWindow" id="app_window">
    <property name="title">Smartknob Simulator</property>
    <property name="resizable">False</property>
    
    <child type="titlebar">
      <object class="GtkHeaderBar">
        <child type="end">
          <object class="GtkMenuButton" id="gears">
            <property name="icon-name">open-menu-symbolic</property>
            <property name="primary">true</property>
          </object>
        </child>
      </object>
    </child>

    <child>
      <object class="GtkBox">
        <property name="name">content</property>
        <property name="orientation">horizontal</property>

        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkDrawingArea" id="drawing_area"/>
            </child>

            <child>
              <object class="GtkScale" id="slider">
                <property name="name">slider</property>
                <property name="visible">True</property>
                <property name="adjustment">slider_adjustment</property>
                <property name="orientation">horizontal</property>
              </object>
            </child>
          </object>
        </child>

        <child>
          <object class="GtkLabel" id="label">
            <property name="name">label</property>
            <property name="visible">True</property>
            <property name="label" translatable="yes">Steps: </property>
          </object>
        </child>

      </object>

    </child>
  </object>

  <menu id="menu">
    <section>
      <item>
        <attribute name="label">Clear canvas</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Help</attribute>
      </item>
    </section>
  </menu>

  <object class="GtkAdjustment" id="slider_adjustment">
    <property name="lower">0</property>
    <property name="upper">100</property>
    <property name="step-increment">1</property>
    <property name="value">50</property>
  </object>
</interface>
